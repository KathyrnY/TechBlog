<main class="main">
    {{#each posts}}
<div class="card">
  <div class="card-body">
    <div>
        <h5 class="card-title">{{title}}</h5>
         <p>Created by {{user.username}} on {{date_created}}</p>
  </div>
  <div>
        <p class="card-text">{{content}}</p>
  </div>
  </div>
</div>
{{#each comments}}
      <div class="card">
        <div class="card-body">
          <p class="card-text">{{content}}</p>
          <p>Created by {{user.username}} on {{date_created}}</p>
        </div>
      </div>
    {{/each}}
  {{/each}}
    </main>