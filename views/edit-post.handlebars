<main class="main">
  <form id="updatePostForm" action="/dashboard/post/{{post.id}}" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" class="form-control" value="{{post.title}}">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" class="form-control">{{post.content}}</textarea>
    </div>
    <button type="submit" id="updateBtn" class="btn btn-primary">Update Post</button>
  </form>
  <form class="delete-post-form" action="/dashboard/delete/{{post.id}}" method="POST">
        <div class="flex justify-center">
        <button type="submit" id="deleteBtn" class="btn btn-primary">Delete Post</button>
        </div>
        </form>
  <script src="/js/edit-post.js"></script>
</main>
